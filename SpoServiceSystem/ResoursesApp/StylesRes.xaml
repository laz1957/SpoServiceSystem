<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:class="clr-namespace:SpoServiceSystem.Classes"
                    >
    <Style x:Key="SlovarHeaderStyle" TargetType="DataGridColumnHeader">
      
        <Setter Property="TextBlock.VerticalAlignment" Value="Top"/>

        <Setter Property="TextBlock.FontWeight" Value="Bold"/>
        <Setter Property="TextBlock.Foreground" Value="White"/>
        <Setter Property="TextBlock.Margin" Value="0,0,0,0"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="Panel.Height" Value="36"/>
        <Setter Property="Panel.Background" Value="{StaticResource brushPanelBackgroundBlue}"/>

    </Style>

   

</ResourceDictionary>