<Window x:Class="SpoServiceSystem.Windows.FiltrSoftWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpoServiceSystem.Windows"
        xmlns:datamodel="clr-namespace:SpoServiceSystem.DataModels"
        mc:Ignorable="d"
        Title="FiltrSoftWindow" Height="450" Width="800">
    <Window.Resources>
        <datamodel:TipUchList x:Key="tipUchList"/>
        <CollectionViewSource x:Key="cvsTasks" Source="{StaticResource tipUchList}" 
                       Filter="CollectionViewSource_Filter" >
        </CollectionViewSource>
    </Window.Resources>
    <Grid>
        <StackPanel>
            <TextBox x:Name="txt001" TextBoxBase.TextChanged="txt001_TextChanged"   >123</TextBox>
                <ComboBox x:Name="cb_001" Height="36" Width="300" SelectedIndex="0"
                   DisplayMemberPath="Name" IsDropDownOpen="True"
                  IsTextSearchEnabled="False"
                  TextBoxBase.TextChanged="cb_001_TextChanged"  
                  KeyDown="cb_001_KeyDown"
                  ItemsSource="{Binding Source={StaticResource cvsTasks}}"/>
        </StackPanel>
    </Grid>
</Window>
