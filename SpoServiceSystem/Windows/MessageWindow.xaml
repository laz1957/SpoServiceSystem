<Window x:Class="SpoServiceSystem.Windows.MessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpoServiceSystem.Windows"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        x:Name="messageWindow"
        Title="Окно сообщений" Height="250" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="32"/>
        </Grid.RowDefinitions>
        <StackPanel Background="LightBlue"></StackPanel>
        <StackPanel Grid.Row="1">
            <TextBlock Text="{Binding ElementName=messageWindow,Path=MessageText}"
                       VerticalAlignment="Center" HorizontalAlignment="Center"
                       ></TextBlock>
        </StackPanel>
        <StackPanel Grid.Row="2" Background="LightBlue">
            
        </StackPanel>
    </Grid>
</Window>
